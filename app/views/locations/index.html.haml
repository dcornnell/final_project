%br
.row
	.large-11.columns	
		%h1 Locations
		%p
			= link_to "add new location" , new_location_path
		%br
		= form_tag locations_path, :method => :get do
			%fieldset
				%legend 
					Search for locations near:
				%label location
				= text_field_tag :search, params[:search]
				%label distance from: (in miles)
				= text_field_tag :distance, params[:distance]
				= submit_tag "Search", :name => nil, class:"button"

		%table
			%th name
			%th address
			%th camping
			%th rock type
			- if @all == false
				%th distance
			-@locations.each do |l|
				%tr
					%td
						= link_to "#{l.name}" , location_path(l)
					%td
						= l.address
					%td
						= l.camping
					%td
						= l.rock_type
					%td	
						- if @all == false
							= l.distance.round(2)
			%br


